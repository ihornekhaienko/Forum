@{
    ViewBag.Title = "Register";
}

@model ForumApp.ViewModels.Account.RegisterViewModel

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

<div class="container body-content">
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">Sign up</h4>
            <p class="text-center">Get started with your free account</p>

            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" id="registerForm">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input asp-for="Email" class="form-control" placeholder="Email address" type="email">
                    <span asp-validation-for="Email" class="text-danger account-span"></span>
                </div> <!-- Email -->

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                    </div>
                    <input asp-for="UserName" class="form-control" placeholder="User name" type="text">
                    <span asp-validation-for="UserName" class="text-danger account-span"></span>
                </div> <!-- Username -->

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input asp-for="Password" class="form-control" placeholder="Create password" type="password">
                    <span asp-validation-for="Password" class="text-danger account-span"></span>
                </div> <!-- Password -->

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Repeat password" type="password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger account-span"></span>
                </div> <!-- Confirm -->

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Create Account  </button>
                </div> <!-- Sign up -->
                <p class="text-center">Have an account? <a asp-controller="Account" asp-action="Login">Log In</a> </p>
            </form>
        </article>
    </div> <!-- card.// -->

</div>
<!--container end.//-->

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}